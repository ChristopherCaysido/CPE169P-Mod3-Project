<FrontLayout>:
    orientation:'vertical'
    canvas.before:
        Color:
            rgba:(.98,.96,.94,1)
        Rectangle:
            size:self.size
            pos:self.pos
    Button:
        id:startButton
        text:'Start Drill'
        pos_hint:{'x':0.70,'y':0.70}
        size_hint:.15,.10
    Spinner:
        id:spinnerdropdown
        text:'Select Drill'
        background_color:0.67,.85,.83,1
        values:('Testing1','Testing2','Testing3','Testing4') #Make it some way to access tables in datables 
        size_hint:.5,.10
        pos_hint:{'x':0.20,'y':0.70}
    BoxLayout:
        orientation:'vertical'
        size:(500,300)

    BoxLayout:
        orientation:'horizontal'
        size_hint_y:.5
        color:0.2,0.5,0.5,1
        Button:
            id:createButton
            text:'Create Deck'
            pos_hint_y:0.6
            size_hint_y:0.3
        Button:
            id:deleteButton
            text:'Delete Deck'
            pos_hint_y:0.6
            size_hint_y:0.3
