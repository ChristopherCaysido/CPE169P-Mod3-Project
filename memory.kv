#:kivy 1.0

WindowManager:
    canvas.before:
        Color:
            rgba:(.98,.96,.94,1)
        Rectangle:
            size:self.size
            pos:self.pos
    FrontScreen:
        id: frontscreen
    DrillScreen:
        id: drillscreen

<FrontScreen>:
    name:"frontscreen"
    
    FloatLayout:
        Button:
            id:startButton
            text:'Start Drill'
            pos_hint:{'x':0.70,'y':0.70}
            size_hint:.15,.10
            on_release:
                app.start_drill()
                app.root.transition.direction = 'left'
                app.root.current = 'drillscreen'
                
        Spinner:
            id:spinnerdropdown
            text: 'Select Drill'
            background_color:0.67,.85,.83,1
            values: ('Testing1','Testing2','Testing3','Testing4') #Make it some way to access tables in datables 
            size_hint:.5,.10
            pos_hint:{'x':0.20,'y':0.70}
            on_text:
                app.current_deck_name = self.text
                print(app.current_drill)
        BoxLayout:
            orientation:'vertical'
            size_hint:(.4,.3)
            pos_hint:{'x':.3,'y':.3}
            canvas.before:
                Color:
                    rgba:(0.67,.85,.83,1)
                Rectangle:
                    size:self.size
                    pos:self.pos

        BoxLayout:
            orientation:'horizontal'
            size_hint_y:.5
            color:0.2,0.5,0.5,1
            Button:
                id:createButton
                text:'Create Deck'
                pos_hint_y:0.6
                size_hint_y:0.3
                on_release:root.callback_popup()
            Button:
                id:deleteButton
                text:'Delete Deck'
                pos_hint_y:0.6
                size_hint_y:0.3
<DrillScreen>:
    name:"drillscreen"
    FloatLayout:
        Label:
            background_color:0.67,.85,.83,1
            size_hint:(.8,.3)
            pos_hint:{'x':0.1,'y':.55}
            id:drillQuestion
            font_size: 40
            text:'Insert Question Here'
            canvas.before:
                Color:
                    rgba:(0.67,.85,.83,1)
                Rectangle:
                    size:self.size
                    pos:self.pos
        GridLayout:
            id:choices
            cols:2
            size_hint:(.8,.35)
            pos_hint:{'x':0.10,'y':0.25}
            Button:
                text:'Choice 1' 
            Button:
                text:'Choice 2'
            Button:
                text:'Choice 3'
            Button:
                text:'Choice 4'
        Button:
            size_hint_x:.3
            size_hint_y:None
            height:40
            pos_hint:{'x':0.1,'y':0.1}
            text:'Return'
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = 'frontscreen'
        Button:
            size_hint_x:.3
            size_hint_y:None
            height:40
            pos_hint:{'x':0.6,'y':0.1}
            text:'Next Question'
            on_release:
                app.load_next_question()
               
<Button>:
    background_color:0,.68,.71
    color:1,1,1,1
<PopupWidget>:
    BoxLayout:
        background_color:0.2,0.2,0.2,1
        orientation:'vertical'
        pos_hint:{'x':.075,'y':.7}
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:100
            Label:
                id:nameDeck
                text:'Name of Deck'
                size_hint_y:None
                size_hint_x:None
